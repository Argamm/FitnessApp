<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D8D8D8">



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_20"
        android:layout_marginTop="@dimen/space_30"
        android:background="@drawable/layout_background"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_my_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_30"

            android:fontFamily="@font/lato"
            android:gravity="center"

            android:paddingVertical="@dimen/space_15"
            android:text="@string/height"
            android:textSize="@dimen/size_20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="@dimen/space_60"
            android:background="#D8D8D8" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_remainder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_30"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:paddingVertical="@dimen/space_15"

            android:text="@string/weight"
            android:textSize="@dimen/size_20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="@dimen/space_60"
            android:background="#D8D8D8" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_rate"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_30"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:paddingVertical="@dimen/space_15"
            android:text="Target weight"

            android:textSize="@dimen/size_20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="@dimen/space_60"
            android:background="#D8D8D8" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_30"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:paddingVertical="@dimen/space_15"
            android:text="Gender"
            android:textCursorDrawable="@color/blue_black"
            android:textSize="@dimen/size_20" />


    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.constraintlayout.widget.ConstraintLayout>